<!-- schema -->
<script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Restaurant",
        "name": "{{ data.name }}",
        "@id": "{{ data.rdl }}#id",
        "url": "{{ data.website }}",
        "telephone": "{{ data.phone }}",
        "servesCuisine": "{{ data.cuisine }}",
        "acceptsReservations": "true",
        "image": "{{ config.image.url }}{{ config.image.transform.default }}{{ config.image.folder }}{{ data.number
}}/{{ data.image.default }}",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "{{ data.addressStreet }}",
            "addressLocality": "{{ data.addressLocality }}",
            "postalCode": "{{ data.postalCode }}",
            "addressCountry": "{{ data.addressCountry }}"
        },
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": "{{ data.geocode.lat }}",
            "longitude": "{{ data.geocode.lng }}"
        },
         "sameAs": "{{ data.social.sameAs }}"
    }
</script>
