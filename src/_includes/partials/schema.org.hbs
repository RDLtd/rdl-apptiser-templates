<!-- schema -->
<script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Restaurant",
        "name": "{{ dataSrc.name }}",
        "@id": "{{ dataSrc.rdl }}#id",
        "url": "{{ dataSrc.website }}",
        "telephone": "{{ dataSrc.phone }}",
        "servesCuisine": "{{ dataSrc.cuisine }}",
        "acceptsReservations": "true",
        "image": "{{ config.image.url }}{{ config.image.transform.default }}{{ config.image.folder }}{{ dataSrc.image.default }}",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "{{ dataSrc.streetAddress }}",
            "addressLocality": "{{ dataSrc.addressLocality }}",
            "postalCode": "{{ dataSrc.postalCode }}",
            "addressCountry": "{{ dataSrc.addressCountry }}"
        },
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": "{{ dataSrc.geocode.lat }}",
            "longitude": "{{ dataSrc.geocode.lng }}"
        },
         "sameAs": "{{ dataSrc.social.sameAs }}"
    }
</script>
