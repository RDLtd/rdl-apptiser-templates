
<!-- Optional section tag start - MENUS DOWNLOAD -->
<section id="menusPdf" class="content-section menu-pdf" aria-label="{{ section.menuDownloads.aria }}">
    <h2 class="section-title">{{ section.menuDownloads.title }}</h2>
    <p>{{ section.menuDownloads.info }}</p>
    <div class="content-block menu-downloads">
        <!-- {{ data.menus.pdfs }} -->
        {{#each data.menus.pdfs }}
            <div class="menu-card-container">
                <a class="menu-card"
                   download="{{ name }}-{{ date }}"
                   href="{{ path }}"
                   aria-label="{{ ../section.menuDownloads.alt }} {{ ../data.name }} {{ name }}">
                    <h3>{{ name }}</h3>
                    <span>Published: {{ date }}</span>
                </a>
            </div>
        {{/each }}
    </div>
</section>
<!-- Optional section tag end - MENUS DOWNLOAD -->
