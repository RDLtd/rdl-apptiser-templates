
<!-- Optional section tag start - Downloadable Menus -->
<section class="content-section menu-pdf" id="pdfMenus">
    <h2 class="section-title">{{ lang.section.menuDownloads.title }}</h2>
    <p>{{ lang.section.menuDownloads.info }}</p>
    <div class="content-block menu-downloads">
        {{#each data.menus.pdfs }}
            <div class="menu-card-container">
                <a class="menu-card"
                   download="{{ name }}-{{ date }}"
                   href="{{ path }}"
                   title="{{ ../lang.section.menuDownloads.alt }} {{ ../data.name }} {{ name }}">
                    <h3>{{ name }}</h3>
                    <span>Published: {{ date }}</span>
                </a>
            </div>
        {{/each }}
    </div>
</section>
<!-- Optional section tag end - Downloadable Menus -->
