<script defer src="https://www.googletagmanager.com/gtag/js?id={{ gtag }}"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '{{ gtag }}');
    gtag('event', 'page_view', {
        brand_prefix: document.querySelector('html').dataset.templateBrand,
        template_version: document.querySelector('html').dataset.templateVersion
    });
</script>
