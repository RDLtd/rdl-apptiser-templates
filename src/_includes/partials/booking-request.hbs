<!-- Email booking widget -->
<div class="booking-request-container">
    <form class="form-booking-request" id="bkgRequestForm" data-advBkgDays="60">
        <div class="selector">
            <div class="selector-substitute">
                <div class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="100%" width="100%">
                        <path fill="none" d="M0 0h24v24H0V0z"/>
                        <circle class="two-tone" cx="9" cy="8.5" r="1.5" opacity=".5"/>
                        <path class="two-tone" d="M4.34 17h9.32c-.84-.58-2.87-1.25-4.66-1.25s-3.82.67-4.66 1.25z" opacity=".3"/>
                        <path d="M9 12c1.93 0 3.5-1.57 3.5-3.5S10.93 5 9 5 5.5 6.57 5.5 8.5 7.07 12 9 12zm0-5c.83 0 1.5.67 1.5 1.5S9.83 10 9 10s-1.5-.67-1.5-1.5S8.17 7 9 7zm0 6.75c-2.34 0-7 1.17-7 3.5V19h14v-1.75c0-2.33-4.66-3.5-7-3.5zM4.34 17c.84-.58 2.87-1.25 4.66-1.25s3.82.67 4.66 1.25H4.34zm11.7-3.19c1.16.84 1.96 1.96 1.96 3.44V19h4v-1.75c0-2.02-3.5-3.17-5.96-3.44zM15 12c1.93 0 3.5-1.57 3.5-3.5S16.93 5 15 5c-.54 0-1.04.13-1.5.35.63.89 1 1.98 1 3.15s-.37 2.26-1 3.15c.46.22.96.35 1.5.35z"/>
                    </svg>
                </div>
                <div class="selected-value" id="txtCovers">2 people</div>
                <div class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="100%" width="100%">
                        <path fill="none" d="M24 24H0V0h24v24z" opacity=".87"/>
                        <path d="M16.59 8.59 12 13.17 7.41 8.59 6 10l6 6 6-6-1.41-1.41z"/>
                    </svg>
                </div>
            </div>
            <select name="covers" aria-label="Booking party size">
                <option>1 person</option>
                <option selected>2 people</option>
                <option>3 people</option>
                <option>4 people</option>
                <option>5 people</option>
                <option>6 people</option>
                <option>7 people</option>
                <option>8 people</option>
            </select>
        </div>
        <div class="selector">
            <div class="selector-substitute">
                <div class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="100%" width="100%">
                        <path fill="none" d="M0 0h24v24H0V0z"/>
                        <path  class="two-tone" d="M12 4c-4.42 0-8 3.58-8 8s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8zm4.25 12.15L11 13V7h1.5v5.25l4.5 2.67-.75 1.23z" opacity=".3"/>
                        <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                    </svg>
                </div>
                <div class="selected-value" id="txtTime">19:30</div>
                <div class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="100%" width="100%">
                        <path fill="none" d="M24 24H0V0h24v24z" opacity=".87"/>
                        <path d="M16.59 8.59 12 13.17 7.41 8.59 6 10l6 6 6-6-1.41-1.41z"/>
                    </svg>
                </div>
            </div>
            <select name="time" aria-label="Booking time">
                <option value="09:00">09:00</option>
                <option value="09:30">09:30</option>
                <option value="10:00">10:00</option>
                <option value="10:30">10:30</option>
                <option value="11:00">11:00</option>
                <option value="11:30">11:30</option>
                <option value="12:00">12:00</option>
                <option value="12:30">12:30</option>
                <option value="13:00">13:00</option>
                <option value="13:30">13:30</option>
                <option value="14:00">14:00</option>
                <option value="14:30">14:30</option>
                <option value="15:00">15:00</option>
                <option value="15:30">15:30</option>
                <option value="16:00">16:00</option>
                <option value="16:30">16:30</option>
                <option value="17:00">17:00</option>
                <option value="17:30">17:30</option>
                <option value="18:00">18:00</option>
                <option value="18:30">18:30</option>
                <option value="19:00">19:00</option>
                <option value="19:30" selected>19:30</option>
                <option value="20:00">20:00</option>
                <option value="20:30">20:30</option>
                <option value="21:00">21:00</option>
                <option value="21:30">21:30</option>
                <option value="22:00">22:00</option>
                <option value="22:30">22:30</option>
                <option value="23:00">23:00</option>
                <option value="23:30">23:30</option>
            </select>
        </div>
        <div class="selector">
            <div class="selector-substitute" id="selectDate">
                <div class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="100%" width="100%">
                        <path fill="none" d="M0 0h24v24H0V0z"/>
                        <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19a2 2 0 0 0 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V9h14v10zm0-12H5V5h14v2zm-7 4H7v5h5v-5z"/>
                        <path class="two-tone" d="M5 5h14v2H5z" opacity=".6"/>
                    </svg>
                </div>
                <input  id="bkgDateInput"
                        aria-label="Booking date"
                        type="text"
                        class="select-input hide-on-mobile"
                        name="date"
                        autocomplete="off"
                        data-adv-days="30">
                <div class="icon hide-on-mobile">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="100%" width="100%">
                        <path fill="none" d="M24 24H0V0h24v24z" opacity=".87"/>
                        <path d="M16.59 8.59 12 13.17 7.41 8.59 6 10l6 6 6-6-1.41-1.41z"/>
                    </svg>
                </div>
            </div>

        </div>
        <button>Booking Request</button>
    </form>
</div>
<!-- modal -->
<div id="modal" class="modal-overlay">
    <div class="modal-window email">
        <div id="emailRequest" class="form-email-request">
            <form id="emailRequest">
                <input type="hidden" name="restaurant_name" value="{{ data.name }}">
                <input type="hidden" name="restaurant_email" value="{{ data.email }}">
                <input type="hidden" name="language" value="en">
                <input type="hidden" name="sender" value="app">
                <!-- Summary -->
                <div class="booking-summary">
                    <h1>Booking Request</h1>
                    <ul>
                        <li>
                            <span class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path fill="none" d="M0 0h24v24H0V0z"/>
                                    <circle class="two-tone" cx="9" cy="8.5" r="1.5" opacity=".5"/>
                                    <path d="M4.34 17h9.32c-.84-.58-2.87-1.25-4.66-1.25s-3.82.67-4.66 1.25z" opacity=".3"/>
                                    <path d="M9 12c1.93 0 3.5-1.57 3.5-3.5S10.93 5 9 5 5.5 6.57 5.5 8.5 7.07 12 9 12zm0-5c.83 0 1.5.67 1.5 1.5S9.83 10 9 10s-1.5-.67-1.5-1.5S8.17 7 9 7zm0 6.75c-2.34 0-7 1.17-7 3.5V19h14v-1.75c0-2.33-4.66-3.5-7-3.5zM4.34 17c.84-.58 2.87-1.25 4.66-1.25s3.82.67 4.66 1.25H4.34zm11.7-3.19c1.16.84 1.96 1.96 1.96 3.44V19h4v-1.75c0-2.02-3.5-3.17-5.96-3.44zM15 12c1.93 0 3.5-1.57 3.5-3.5S16.93 5 15 5c-.54 0-1.04.13-1.5.35.63.89 1 1.98 1 3.15s-.37 2.26-1 3.15c.46.22.96.35 1.5.35z"/>
                                </svg>
                            </span>
                            <span id="partySize"
                                  data-persons="people"
                                  data-person="person">
              </span>
                        </li>
                        <li>
                            <span class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path fill="none" d="M0 0h24v24H0V0z"/>
                                <path class="two-tone" d="M12 4c-4.42 0-8 3.58-8 8s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8zm4.25 12.15L11 13V7h1.5v5.25l4.5 2.67-.75 1.23z" opacity=".3"/>
                                <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                            </svg>
                            </span>
                            <span id="timeSlot">8pm</span>
                        </li>
                        <li>
                            <span class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path fill="none" d="M0 0h24v24H0V0z"/>
                                    <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19a2 2 0 0 0 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V9h14v10zm0-12H5V5h14v2zm-7 4H7v5h5v-5z"/>
                                    <path class="two-tone" d="M5 5h14v2H5z" opacity=".3"/>
                                </svg>
                            </span>
                            <span id="dayDate">Sat, 29 June 2019</span>
                        </li>
                    </ul>
                </div>
                <h2>Please enter your contact details below:</h2>
                <!-- Name -->
                <div class="text-field">
                    <input id="full_name" type="text" name="full_name" placeholder=" " autofocus required tabindex="0">
                    <label for="full_name">Your full name</label>
                </div>
                <!-- Email -->
                <div class="text-field">
                    <input id="email" type="email" name="email" placeholder=" " required>
                    <label for="email">Your Email Address</label>
                </div>
                <p><strong>Please note</strong>: booking requests are subject to availability and are not confirmed until you have been contacted by the restaurant.</p>
                <!-- Actions -->
                <div class="modal-actions">
                    <button id="btnCancel" type="button" class="btn-cancel">CANCEL</button>
                    <button id="btnSubmit" type="submit" class="btn-submit">SEND REQUEST</button>
                </div>
            </form>
        </div>
    </div>
    <div class="booking-request-thanks">
        <img src="data:image/png;base64," alt="An email request has been sent"><span>Thanks, we'll be in touch.</span>
    </div>
</div>
