<html lang="{{ language }}" data-id="{{ demo.number }}" xmlns="http://www.w3.org/1999/html">

<!-- {{ pkg.version }} -->

<head>

	<meta charset="utf-8">
    <title>{{ demo.name }} | {{ demo.streetAddress }} {{ demo.postalCode }}</title>
    <meta name="description" content="{{ demo.description.sentence }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- TODO: should only be applied to previews -->
