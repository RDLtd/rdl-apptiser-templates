        <link rel="stylesheet" href="/assets/styles/themes/{{ demo.theme }}.css" />
    {{/if}}

	<link rel="stylesheet" href="/assets/styles/member.css" />

	<script type="module" src="/assets/scripts/main.js" defer></script>

    {{> partials/google-apis }}

