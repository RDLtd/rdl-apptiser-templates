<!DOCTYPE html>
<html lang="{{ language }}" data-id="{{ data.id }}" data-template-version="{{ pkg.version }}" xmlns="http://www.w3.org/1999/html">
<head>
	<meta charset="utf-8">
    <title>{{ data.name }} | {{ data.streetAddress }} {{ data.postalCode }}</title>
    <meta name="description" content="{{ data.description.sentence }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">

<!--    <meta name="robots" content="noindex">-->

    {{> partials/schema.org }}

    {{> partials/open-graph }}

    <link rel="icon" href="{{ config.assets }}/brands/{{ brand.name }}/favicon.ico">
    <link rel="apple-touch-icon" href="{{ config.assets }}/brands/{{ brand.name }}/apple-touch-icon.png">
    <link rel="manifest" href="{{ config.assets }}/brands/{{ brand.name }}/manifest.json?v={{ pkg.version }}">

    {{> partials/fullers/fonts }}

    <link rel="stylesheet" href="{{ config.assets }}/styles/themes/fullers.css?v={{ pkg.version }}" />

	<link rel="stylesheet" href="{{ config.assets }}/styles/fullers.css?v={{ pkg.version }}" />

	<script type="module" src="{{ config.assets }}/scripts/main.js?v={{ pkg.version }}" defer></script>

    {{> partials/google-apis }}

</head>

<body>

	{{{ content }}}

</body>
</html>

