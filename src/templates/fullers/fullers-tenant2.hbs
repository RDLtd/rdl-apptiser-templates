---
title: "Fullers Tenant's Template"
language: "en"
layout: "layouts/fullers.hbs"
gtag: ""
permalink: "/templates/fullers-tenant2-{{ pkg.version }}.html"
brand:
    name: "fullers"
    prefix: "full"
    url: "https://apptiser.io/"
    theme: "fullers"
---

{{> partials/fullers/nav }}

<!-- HERO -->
<section id="hero" class="section-hero">
    <div class="brand-container fade-in">
        <img class="brand-logo fade-in" src="https://res.cloudinary.com/rdl/image/upload/c_scale,f_auto,w_1000/v1692252038/fullers/logo-full.png" alt="Fuller's logo">
        <h2>{{ data.name }}</h2>
        <h3 class="subtitle">{{ data.subtitle }}</h3>
        <ul class="hero-nav fade-in">
            {{> partials/nav-options }}
        </ul>
        <span class="desc-one-sentence fade-in" >{{ data.description.sentence }}</span>
    </div>
    {{> partials/hero-image }}
</section>

<main id="home">

    <!-- ABOUT -->
    <section id="about" class="content-section" aria-label="introduction">
        <div class="content-block">
            <div class="description" aria-label="description">
                <p>{{ data.description.full }}</p>
                <!-- feature tags-->
                <ul class="additional-features" aria-label="features">
                    <!-- {{ data.features }} -->
                    {{#each data.features }}
                    <li>{{ this }}</li>
                    {{/each}}
                </ul>
            </div>
            <!-- opening times -->
            <aside id="hours" class="opening-times">
                <dl>
                    <dt>{{ section.about.tel }}</dt>
                    <dd><a href="tel:{{ data.phone }}">{{ data.phone }}</a></dd>
                    <dt>{{ section.about.address }}</dt>
                    <dd>{{ data.addressStreet }}</dd>
                    <dd>{{ data.addressLocality }}</dd>
                    <dd>{{ data.addressRegion }} {{ data.postalCode }}</dd>
                    <dt>{{ section.about.openingTimes }}</dt>
                    <dd class="times">{{ data.openingTimes }}</dd>

                    <!-- Optional section tag start - Opening Notes -->
                    <dt>{{ section.about.openingNotes }}</dt>
                    <dd>{{ data.openingNotes }}</dd>
                    <!-- Optional section tag end - Opening Notes -->
                </dl>
            </aside>
        </div>

        {{> partials/gallery }}

    </section>

    <section id="times" class="content-section">
        <h2 class="section-title">{{ section.about.openingTimes }}</h2>

    </section>

    {{> partials/menus }}

    {{> partials/menu-downloads }}

    <!-- RESERVATIONS -->
    <section id="reservations" class="content-section booking-section" aria-label="booking widget">
        <h2 class="section-title">{{ section.reservations.title }}</h2>
        <p>{{ data.reservations.info }}</p>

        {{> partials/booking-request }}

        <!-- group & private bookings -->
        <div class="content-block">

            <!-- Optional section tag start - Bookings Group -->
            <aside>
                <h2 class="sub-section-title">{{ section.reservations.groups }}</h2>
                <p>{{ data.reservations.groups }}</p>
            </aside>
            <!-- Optional section tag end - Bookings Group -->

            <!-- Optional section tag start - Bookings Private -->
            <aside>
                <h2 class="sub-section-title">{{ section.reservations.private }}</h2>
                <p>{{ data.reservations.private }}</p>
            </aside>
            <!-- Optional section tag end - Bookings Private -->

        </div>
    </section>

    {{> partials/map }}

</main>

{{> partials/fullers/footer }}

<div id="eventsWidget" data-widget-label="{{{ button.promotions }}}"></div>


