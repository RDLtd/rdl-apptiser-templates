---
title: "Apptiser Standard"
language: "en"
layout: "layouts/apptiser.hbs"
gtag: "G-RX7PGJKJGS"
permalink: "/templates/apptiser.html"
brand:
    name: "Apptiser"
    prefix: "apt"
    url: "https://apptiser.io/"
    theme: "apptiser"
---

<!-- mobile nav -->
<div class="nav-menu" id="navMenu">
    <button id="navBtn" class="hamburger hamburger--spin" type="button" title="{{ data.name }} navigation menu">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
    </button>
</div>

<!-- global nav -->
<nav id="navBar" aria-label="primary">
    <a href="#" class="brand" title="Back to top">
        <h1>{{ data.name }}</h1>
    </a>
    <ul class="nav-list-mobile" role="list">
        <li><a href="#about" title="About ">About</a></li>
        <!-- Optional section tag start - Menus NavBar -->
        <li><a href="#menus" title="Menus ">Menus</a></li>
        <!-- Optional section tag end - Menus NavBar -->
        <li><a href="#reservations" title="Reservations">Reservation</a></li>
        <li><a href="#contacts" title="Contact ">Contacts</a></li>
        <li><a href="#location" title="Find ">Location</a></li>
    </ul>
</nav>

<!-- hero -->
<section id="hero" class="section-hero">
    <div class="brand-container fade-in">
        <h2>{{ data.name }}</h2>
        <h3 class="subtitle">{{ data.subtitle }}</h3>
        <ul class="hero-nav fade-in">
            <li><a href="#about" title="About ">About</a></li>
            <!-- Optional section tag start - Menus Hero -->
            <li><a href="#menus" title="Menus ">Menus</a></li>
            <!-- Optional section tag end - Menus Hero -->
            <li><a href="#reservations" title="Reservations">Reservations</a></li>
            <li><a href="#contacts" title="Contact">Contacts</a></li>
            <li><a href="#location" title="Find">Location</a></li>
        </ul>
        <span class="desc-one-sentence fade-in" >{{ data.description.sentence }}</span>
    </div>
    {{> partials/hero-image }}
</section>

<main id="home">

    <!-- ABOUT -->
    <section id="about" class="content-section" aria-label="introduction">
        <div class="content-block">
            <div class="description" aria-label="description">
                <p>{{ data.description.full }}</p>
                <!-- Feature keywords-->
                <ul class="additional-features" aria-label="features">
                    {{#each data.features }}
                    <li>{{ this }}</li>
                    {{/each}}
                </ul>
            </div>
            <!-- times -->
            <aside class="opening-times">
                <dl>
                    <dt>Telephone</dt>
                    <dd><a href="tel:{{ data.phone }}">{{ data.phone }}</a></dd>
                    <dt>Address</dt>
                    <dd>{{ data.addressStreet }}</dd>
                    <dd>{{ data.addressLocality }}</dd>
                    <dd>{{ data.addressRegion }} {{ data.postalCode }}</dd>
                    <dt>Opening Times</dt>
                    <dd class="times">{{ data.openingTimes }}</dd>

                    <!-- Optional section tag start - Opening Notes -->
                    <dt>PLEASE NOTE:</dt>
                    <dd>{{ data.openingNotes }}</dd>
                    <!-- Optional section tag end - Opening Notes -->
                </dl>
            </aside>
        </div>

        {{> partials/gallery }}

    </section>

    {{> partials/menus }}

    {{> partials/menu-downloads }}

    <!-- bookings -->
    <section id="reservations" class="content-section booking-section" aria-label="booking widget">
        <h2 class="section-title">Reservations</h2>
        <p>{{ data.reservations.info }}</p>

        <!-- booking extras -->
        <div class="content-block">

            <!-- Optional section tag start - Bookings Group -->
            <aside>
                <h2 class="sub-section-title">Group bookings</h2>
                <p>{{ data.reservations.groups }}</p>
            </aside>
            <!-- Optional section tag end - Bookings Group -->

            <!-- Optional section tag start - Bookings Private -->
            <aside>
                <h2 class="sub-section-title">Private Dining</h2>
                <p>{{ data.reservations.private }}</p>
            </aside>
            <!-- Optional section tag end - Bookings Private -->

        </div>
    </section>

    <!-- contacts -->
    <section id="contacts" class="content-section contact-section">
        <h2 class="section-title">Contacts</h2>
        <div class="content-block">

            <aside>
                <dl>
                    <dt>Address</dt>
                    <dd>{{ data.addressStreet }}</dd>
                    <dd>{{ data.addressLocality }} {{ data.postalCode }}</dd>
                    <dt>Telephone</dt>
                    <dd><a href="tel:{{ data.phone }}">{{ data.phone }}</a></dd>
                </dl>
            </aside>

            <!-- Optional section tag start - Links -->
            <aside>
                <dl>
                    <dt>Links</dt>
                    <dd>
                        <div class="social-links">
                        {{#each data.social.networks }}
                            <div>
                                <a class="social-link" href="{{ this.url }}" title="{{ this.alt }}">
                                    <img src="/assets/images/icon-{{ this.name }}.svg" alt="{{ this.name }} logo">
                                </a>
                                <span>{{ this.name }}</span>
                            </div>
                        {{/each}}
                        </div>
                    </dd>
                </dl>
            </aside>
            <!-- Optional section tag end - Links -->

            <!-- Optional section tag start - Transport -->
            <aside>
                <dl>
                    <!-- Optional section tag start - Transport Public -->
                    <dt>Public Transport</dt>
                    <dd>{{ data.transport }}</dd>
                    <!-- Optional section tag end - Transport Public -->

                    <!-- Optional section tag start - Transport Parking -->
                    <dt>Parking</dt>
                    <dd>{{ data.parking }}</dd>
                    <!-- Optional section tag end - Transport Parking -->
                </dl>
            </aside>
            <!-- Optional section tag end - Transport -->
        </div>
    </section>

    {{> partials/map }}

</main>

{{> partials/footer-apptiser }}


