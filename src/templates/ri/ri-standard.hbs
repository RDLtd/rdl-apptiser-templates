---
title: "Restaurateurs Indépendants"
language: "fr"
layout: "layouts/ri-standard.hbs"
gtag: "G-RX7PGJKJGS"
permalink: "/templates/ri-standard-{{ pkg.version }}.html"
brand:
    name: "Restaurateurs Indépendants"
    prefix: "ri"
    url: "https://restaurateursindependants.fr/"
    theme: "collective"
---

<!-- mobile nav -->
<div class="nav-menu" id="navMenu">
    <button id="navBtn" class="hamburger hamburger--spin" type="button" title="{{ data.name }} navigation menu">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
    </button>
</div>

<!-- global nav -->
<nav id="navBar" aria-label="primary">
    <a href="#" class="brand" title="{{ nav.label.backToTop }}">
        <h1>{{ data.name }}</h1>
    </a>
    <ul class="nav-list-mobile" role="list">
        {{> partials/nav-options }}
    </ul>
</nav>

<!-- hero -->
<section id="hero" class="section-hero">
    <div class="brand-container fade-in">
        <h2>{{ data.name }}</h2>
        <h3 class="subtitle">{{ data.subtitle }}</h3>
        <ul class="hero-nav fade-in">
            {{> partials/nav-options }}
        </ul>
        <span class="desc-one-sentence fade-in" >{{ data.description.sentence }}</span>
    </div>
    {{> partials/hero-image }}
</section>

<main id="home">

    <!-- about -->
    <section id="about" class="content-section" aria-label="{{ section.about.title }}">
        <div class="content-block">
            <div class="description desc-full" aria-label="description">
                <p>{{ data.description.full }}</p>
                <!-- feature tags-->
                <ul class="additional-features" aria-label="features">
                    <!-- {{ data.features }} -->
                    {{#each data.features }}
                        <li>{{ this }}</li>
                    {{/each}}
                </ul>
            </div>
            <!-- opening times -->
            <aside id="hours" class="opening-times">
                <dl>
                    <dt>{{ section.about.tel }}</dt>
                    <dd><a href="tel:{{ data.phone }}">{{ data.phone }}</a></dd>
                    <dt>{{ section.about.address }}</dt>
                    <dd>{{ data.addressStreet }}</dd>
                    <dd>{{ data.addressLocality }}</dd>
                    <dd>{{ data.addressRegion }} {{ data.postalCode }}</dd>
                    <dt>{{ section.about.openingTimes }}</dt>
                    <dd class="times">{{ data.openingTimes }}</dd>
                    <!-- Optional section tag start - OPENING NOTES -->
                    <dt>{{ section.about.openingNotes }}</dt>
                    <dd>{{ data.openingNotes }}</dd>
                    <!-- Optional section tag end - OPENING NOTES -->
                </dl>
            </aside>
        </div>

        {{> partials/gallery }}

    </section>

    {{> partials/menus }}

    {{> partials/menu-downloads }}

    {{> partials/booking }}

    {{> partials/events }}

    {{> partials/contacts }}

    {{> partials/map }}

</main>

{{> partials/footer-restaurateurs-independants }}

<div id="eventsWidget" class="events-sticky" data-widget-label="Événements"></div>




