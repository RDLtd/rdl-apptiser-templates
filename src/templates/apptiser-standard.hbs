---
title: "Apptiser Standard"
language: "en"
layout: "layouts/apptiser-standard.hbs"
gtag: "G-4FPKM2SVKM"
permalink: "/templates/apptiser-standard-{{ pkg.version }}.html"
brand:
    name: "apptiser"
    prefix: "apt"
    url: "https://apptiser.io/"
    theme: "apptiser"
---

<!-- mobile nav -->
<div class="nav-menu" id="navMenu">
    <button id="navBtn" class="hamburger hamburger--spin" type="button" aria-label="{{ lang.nav.label.navMenuMobile }}">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
    </button>
</div>

<!-- global nav -->
<nav id="navBar" aria-label="primary">
    <a href="#" class="brand" aria-label="{{ lang.nav.label.backToTop }}">
        <h1>{{ data.name }}</h1>
    </a>
    <ul class="nav-list-mobile" role="list">
        {{> partials/nav-options }}
    </ul>
</nav>

<!-- HERO -->
<section id="hero" class="section-hero">
    <div class="brand-container fade-in">
        <h2>{{ data.name }}</h2>
        <h3 class="subtitle">{{ data.subtitle }} {{ lookup (lookup lang brand.name) 'label' }}</h3>
        <ul class="hero-nav fade-in">
            {{> partials/nav-options }}
        </ul>
        <span class="desc-one-sentence fade-in" >{{ data.description.sentence }}</span>
    </div>
    {{> partials/hero-image }}
</section>

<main id="home">

    <!-- ABOUT -->
    <section id="about" class="content-section" aria-label="introduction">
        <div class="content-block">
            <div class="description" aria-label="description">
                <p>{{ data.description.full }}</p>
                <!-- feature tags-->
                <ul class="additional-features" aria-label="features">
                    {{#each data.features }}
                    <li>{{ this }}</li>
                    {{/each}}
                </ul>
            </div>
            <!-- opening times -->
            <aside class="opening-times">
                <dl>
                    <dt>{{ lang.section.about.tel }}</dt>
                    <dd><a href="tel:{{ data.phone }}">{{ data.phone }}</a></dd>
                    <dt>{{ lang.section.about.address }}</dt>
                    <dd>{{ data.addressStreet }}</dd>
                    <dd>{{ data.addressLocality }}</dd>
                    <dd>{{ data.addressRegion }} {{ data.postalCode }}</dd>
                    <dt>{{ lang.section.about.openingTimes }}</dt>
                    <dd class="times">{{ data.openingTimes }}</dd>

                    <!-- Optional section tag start - Opening Notes -->
                    <dt>{{ lang.section.about.openingNotes }}</dt>
                    <dd>{{ data.openingNotes }}</dd>
                    <!-- Optional section tag end - Opening Notes -->
                </dl>
            </aside>
        </div>

        {{> partials/gallery }}

    </section>

    {{> partials/menus }}

    {{> partials/menu-downloads }}

    <!-- RESERVATIONS -->
    <section id="reservations" class="content-section booking-section" aria-label="booking widget">
        <h2 class="section-title">{{ lang.section.reservations.title }}</h2>
        <p>{{ data.reservations.info }}</p>

        {{> partials/booking-request }}

        <!-- group & private bookings -->
        <div class="content-block">

            <!-- Optional section tag start - Bookings Group -->
            <aside>
                <h2 class="sub-section-title">{{ lang.section.reservations.groups }}</h2>
                <p>{{ data.reservations.groups }}</p>
            </aside>
            <!-- Optional section tag end - Bookings Group -->

            <!-- Optional section tag start - Bookings Private -->
            <aside>
                <h2 class="sub-section-title">{{ lang.section.reservations.private }}</h2>
                <p>{{ data.reservations.private }}</p>
            </aside>
            <!-- Optional section tag end - Bookings Private -->

        </div>
    </section>

    {{> partials/contacts }}

    {{> partials/map }}

</main>

{{> partials/footer-apptiser }}


